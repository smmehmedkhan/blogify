      <div class="flex user__wrapper">
        <div class="flex avatar__wrapper">
          <img src="/images/user-2.jpg" alt="User Avatar" class="avatar" />
        </div>
        <div class="fluid user__info">
          <h6>Elena Rodriguez</h6>
          <p class="user__role">Fiction Author</p>
        </div>
      </div>
    </div>
