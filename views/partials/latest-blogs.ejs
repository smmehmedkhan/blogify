<section class="container latest__blogs" id="latestPost">

  <div class="inline__container blogs__header">
    <h4>Latest blog posts</h4>
    <%- include('../components/search.ejs') %>
  </div>

  <% if (blogs.length===0) { %>
    <%- include('../components/empty-post.ejs') %>
      <% } else { %>
        <ul id="blogsContainer" class="blogs__container">
          <% blogs.forEach(blog=> { %>
            <li>
              <a href="/blog/<%= blog._id %>">
                <div class="card post__card">
                  <h5>
                    <%= blog.title %>
                  </h5>
                  <div class="flex credit__container">
                    <div class="tags blog__author">
                      <i class="fa-solid fa-at"></i>
                      <span>
                        <%= blog.author %>
                      </span>
                    </div>
                    <div class="tags blog__date">
                      <i class="fa-solid fa-calendar-days"></i>
                      <span>
                        <%= blog.createdAt.toDateString() %>
                      </span>
                    </div>
                  </div>
                  <div class="contents__container">
                    <% if (blog.coverImage?.url) { %>
                      <img class="cover__img" src="<%= blog.coverImage.url %>" alt="<%= blog.title %>" loading="lazy">
                      <% } else { %>
                        <div class="text__content">
                          <%- blog.descriptions %>
                        </div>
                        <% } %>
                  </div>
                </div>
              </a>
            </li>
            <% }) %>
        </ul>
        <%- include('../components/pagination.ejs')%>
          <% } %>
</section>