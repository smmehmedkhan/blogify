<% if (toast && toast.success && toast.success.length> 0) { %>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      Toastify({
        text: "<%= toast.success[0] %>",
        avatar: '/icons/success.svg',
        style: {
          color: 'hsl(0 0% 98%)',
          background: 'hsl(160.1 84.1% 39.4%)',
        },
        duration: 5000,
        close: true,
        gravity: "bottom",
        position: "right",
        stopOnFocus: true
      }).showToast();
    });
  </script>
  <% } %>

