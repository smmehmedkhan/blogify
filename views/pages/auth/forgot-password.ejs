<!-- Auth cards wrapper -->
<main class="fluid auth__wrapper">

  <!-- Form Card -->
  <div class="container forgot__password">

    <!-- Card header -->
    <div class="auth__header">
      <h5>Forgot Password</h5>
      <p class="service-info"><%- message || null %></p>
    </div>

    <!-- Main Form -->
    <form class="fluid" action="/auth/forgot-password" method="POST">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <!-- Inputs gruop -->
      <div class="fluid form__group">
        <label for="email"><b>Email address</b></label>
        <input type="email" id="email" name="email" value="<%- email || null %>" placeholder="example@mail.com"
          required>
        <p id="forgotEmailError"><%- emailError %></p>
      </div>

      <!-- Inputs gruop -->
      <div class="fluid form__group">
        <button type="submit" id="resetPassBtn">Reset Password</button>
      </div>
    </form>

    <!-- Card Footer -->
    <div class="fluid auth__footer">
      <p class="sign__in-link">
        Back to
        <a href="/auth/sign-in">Sign In</a>
      </p>
    </div>
  </div>
  </div>